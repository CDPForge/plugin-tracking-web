    "@testing-library/jest-dom": "^5.17.0",
    "@types/jest": "^29.5.0",
    "@types/webpack": "^5.28.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "path": "^0.12.7",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.9.2",
